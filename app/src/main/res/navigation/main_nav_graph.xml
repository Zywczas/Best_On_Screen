<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainNavGraph"
    app:startDestination="@id/destDbFragment">


    <fragment
        android:id="@+id/destDbFragment"
        android:name="com.zywczas.bestonscreen.views.DBFragment"
        android:label="Best On Screen">
        <action
            android:id="@+id/actionToApi"
            app:destination="@id/destApiFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/actionToDetails"
            app:destination="@id/destDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/destApiFragment"
        android:name="com.zywczas.bestonscreen.views.ApiFragment"
        android:label="ApiFragment">
        <action
            android:id="@+id/actionToDetails"
            app:destination="@id/destDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/actionToDb"
            app:destination="@id/destDbFragment"
            app:popUpTo="@id/destDbFragment"
            app:popUpToInclusive="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            />
    </fragment>

    <fragment
        android:id="@+id/destDetailsFragment"
        android:name="com.zywczas.bestonscreen.views.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="movie"
            app:argType="com.zywczas.bestonscreen.model.Movie" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.zywczas.bestonscreen.views.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>