<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bestOnScreenApp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/posterImageViewMovies"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitCenter"
        bestOnScreenApp:layout_constraintDimensionRatio="1:1.5"
        bestOnScreenApp:layout_constraintEnd_toEndOf="parent"
        bestOnScreenApp:layout_constraintHorizontal_bias="0.5"
        bestOnScreenApp:layout_constraintStart_toStartOf="parent"
        bestOnScreenApp:layout_constraintTop_toTopOf="parent"
        bestOnScreenApp:srcCompat="@drawable/poster_example"
        android:contentDescription="@string/movie_image" />

    <TextView
        android:id="@+id/rateTextViewMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        bestOnScreenApp:layout_constraintStart_toEndOf="@+id/imageView"
        bestOnScreenApp:layout_constraintTop_toBottomOf="@+id/posterImageViewMovies"
        tools:text="7.7" />

    <TextView
        android:id="@+id/titleTextViewMovies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        bestOnScreenApp:layout_constraintEnd_toEndOf="@+id/posterImageViewMovies"
        bestOnScreenApp:layout_constraintHorizontal_bias="1.0"
        bestOnScreenApp:layout_constraintStart_toStartOf="parent"
        bestOnScreenApp:layout_constraintTop_toBottomOf="@+id/rateTextViewMovies"
        tools:text="movie title" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        bestOnScreenApp:layout_constraintBottom_toBottomOf="@+id/rateTextViewMovies"
        bestOnScreenApp:layout_constraintStart_toStartOf="parent"
        bestOnScreenApp:layout_constraintTop_toTopOf="@+id/rateTextViewMovies"
        bestOnScreenApp:srcCompat="@android:drawable/btn_star_big_on"
        android:contentDescription="@string/star" />
</androidx.constraintlayout.widget.ConstraintLayout>
