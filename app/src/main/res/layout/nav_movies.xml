<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/toWatchListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="toWatchClicked"
        android:text="@string/to_watch_list"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/upcomingTextView"
        app:layout_constraintEnd_toEndOf="@+id/upcomingTextView"
        app:layout_constraintStart_toStartOf="@+id/upcomingTextView"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/topRatedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="categoryClicked"
        android:text="@string/top_rated"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popularTextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/choose_category_header"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/toWatchListTextView"
        app:layout_constraintEnd_toEndOf="@+id/toWatchListTextView"
        app:layout_constraintStart_toStartOf="@+id/toWatchListTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/upcomingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="categoryClicked"
        android:text="@string/upcoming"
        android:textColor="@android:color/holo_purple"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/popularTextView"
        app:layout_constraintEnd_toEndOf="@+id/popularTextView"
        app:layout_constraintStart_toStartOf="@+id/popularTextView"
        app:layout_constraintTop_toBottomOf="@+id/toWatchListTextView" />

    <TextView
        android:id="@+id/popularTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="categoryClicked"
        android:text="@string/popular"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/topRatedTextView"
        app:layout_constraintEnd_toEndOf="@+id/topRatedTextView"
        app:layout_constraintStart_toStartOf="@+id/topRatedTextView"
        app:layout_constraintTop_toBottomOf="@+id/upcomingTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>